[Unit]
Description={{ node_description }}
Documentation={{ node_repo }}
After=network.target

[Service]
Environment=PORT={{ node_localport }} ADDR=127.0.0.1
Type=simple
User={{ node_user }}
WorkingDirectory=/home/{{ node_user }}/{{ node_name }}
ExecStartPre=/usr/bin/npm install
ExecStart=/usr/bin/npm start
Restart=on-failure

[Install]
WantedBy=multi-user.target
