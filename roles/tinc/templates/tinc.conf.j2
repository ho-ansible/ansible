##
# /etc/tinc/{{ tinc_name }}/tinc.conf
# {{ ansible_managed }}
# Configuration for tinc mesh VPN

Port = {{ tinc_port }}

{% if 'tinc1' in cname | default("") %}
Name = tinc1
{% elif 'tinc2' in cname | default("") %}
Name = tinc2
{% else %}
Name = {{ inventory_hostname }}
{% endif %}

ConnectTo = tinc1
ConnectTo = tinc2

Mode = switch

{% if 'win' in group_names %}
{% else %}
{%   if 'android' in group_names %}
Device = /dev/tun
{%   else %}
Device = /dev/net/tun
{%   endif %}
PriorityInheritance = yes
{% endif %}

DeviceStandby = yes
ProcessPriority = high
LocalDiscovery = yes
ReplayWindow = 32
MACLength = 8

PingInterval = 120
PingTimeout = 10
MaxTimeout = 300

Compression = 10
IndirectData = yes

{% if 'android' in group_names %}
ScriptsInterpreter = /system/bin/sh
{% endif %}
