## /etc/tinc/{{ tinc_name }}/tinc.conf
# Configuration for tinc mesh VPN
# {{ ansible_managed }}

Port = {{ tinc_port }}

Name = {{ ansible_hostname }}
ConnectTo = tinc1
ConnectTo = tinc2

Mode = switch
Device = /dev/net/tun

ProcessPriority = high
GraphDumpFile = /var/www/tinc-graph.dot
LocalDiscovery = yes
PriorityInheritance = yes
PingInterval = 120
PingTimeout = 10
MaxTimeout = 300
