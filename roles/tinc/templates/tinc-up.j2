#! /bin/sh
## /etc/tinc/{{ tinc_net }}/tinc-up
## {{ansible_managed}}
## Link configuration once tinc VPN connection has been established

ip link set $INTERFACE up

{% if 'tinc1' in cname | default("") %}
ip addr add 10.100.1.1/24 dev $INTERFACE
{% elif 'tinc2' in cname | default("") %}
ip addr add 10.100.1.2/24 dev $INTERFACE
{% else %}
dhcpcd -Gw $INTERFACE
{% endif %}
