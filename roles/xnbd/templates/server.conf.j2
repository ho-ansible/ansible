##
# /etc/xnbd.conf
# {{ ansible_managed }}
# Network block device: server

{
  "wrapper": {
    "address": "{{ vars['ansible_tinc_' ~ tinc_name]['ipv4']['address'] }}",
    "port": {{ xnbd_port }},
    "socket": "/var/run/xnbd.ctl",
    "logpath": "/var/log/xnbd.log",
    "max_buf_size": 0,	# https://bitbucket.org/hirofuchi/xnbd/issues/11/
    "max_queue_size": 0,
    "volumes": {
      "0": "{{ xnbd_img }}"
    }
  }
}
