## Nginx site config for Node.js server

map $http_upgrade $connection_upgrade {
	default upgrade;
	'' close;
}

upstream multiplex {
	server localhost:1948;
}

server {
	listen 4343 ssl;
	listen [::]:4343 ssl;
	server_name node.seanho.com;
	root /var/www/node;

	# Reveal.js socket.io server
	location /multiplex {
		proxy_pass http://multiplex;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Host $host;
	}
}

